<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarColoredBackArrow"
        android:popupTheme="@style/AppTheme"
        >
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:gravity="center"
                    android:text="SƠ ĐỒ THI SÁT HẠCH LÁI XE A1, A2"
                    android:textColor="#000"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/_266sdp"
                    android:layout_height="@dimen/_166sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/a" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="NỘI DUNG 4 BÀI SA HÌNH SÁT HẠCH LÁI XE A1, A2"
                    android:textColor="#000"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:paddingLeft="@dimen/_17sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="Bài số 1: Lái xe theo vòng số 8\n\nBài số 2: Lái xe trên đường thẳng\n\nBài số 3: Lái xe trên đường ngoằn ngoèo\n\nBài số 4: Lái xe trên đường gồ ghề"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:paddingLeft="@dimen/_17sdp"
                    android:text="Các lỗi bị trừ điểm:"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:paddingLeft="@dimen/_17sdp"
                    android:text="Điểm tối thiểu để đạt là 80/100."
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:paddingLeft="@dimen/_17sdp"
                    android:text="- Trừ 5 điểm: cán vạch, chết máy, chân chạm đất\n\n- Trừ 25 điểm - loại trực tiếp: học viên để té xe hoặc đi sai hình (đi ngược vòng) hoặc sẽ bị lọa trực tiếp"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_kinhNghiemThiA"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_58sdp"
                    android:clickable="true"
                    android:paddingLeft="@dimen/_17sdp"
                    android:text="Kinh nghiệm thi >>"
                    android:textColor="#36b1ea"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>